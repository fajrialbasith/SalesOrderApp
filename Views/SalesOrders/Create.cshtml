@model SalesOrderApp.Models.SalesOrder

@{
    ViewData["Title"] = "Create Sales Order";
}

<h2>Create Sales Order</h2>

<form asp-action="Create">
    <div class="form-group">
        <label asp-for="ORDER_NO" class="control-label"></label>
        <input asp-for="ORDER_NO" class="form-control" />
        <span asp-validation-for="ORDER_NO" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ORDER_DATE" class="control-label"></label>
        <input asp-for="ORDER_DATE" class="form-control" type="date" />
        <span asp-validation-for="ORDER_DATE" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="COM_CUSTOMER_ID" class="control-label"></label>
        <select asp-for="COM_CUSTOMER_ID" class="form-control" asp-items="@(new SelectList(ViewBag.Customers, "COM_CUSTOMER_ID", "CUSTOMER_NAME"))"></select>
        <span asp-validation-for="COM_CUSTOMER_ID" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ADDRESS" class="control-label"></label>
        <input asp-for="ADDRESS" class="form-control" />
        <span asp-validation-for="ADDRESS" class="text-danger"></span>
    </div>
    
    <h3>Items</h3>
    <div id="itemList">
        <table class="table" id="itemsTable">
            <thead>
                <tr>
                    <th>Item Name</th>
                    <th>Quantity</th>
                    <th>Price</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <!-- Item rows will go here -->
            </tbody>
        </table>
        <button type="button" class="btn btn-success" id="addItemBtn">Add Item</button>
    </div>
    
    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Close</a>
</form>

@section Scripts {
    <script>
        document.getElementById('addItemBtn').addEventListener('click', function () {
            let table = document.getElementById('itemsTable').getElementsByTagName('tbody')[0];
            let row = table.insertRow();
            row.innerHTML = `
                <td><input type="text" class="form-control" name="ItemName" /></td>
                <td><input type="number" class="form-control" name="Quantity" /></td>
                <td><input type="number" class="form-control" name="Price" step="0.01" /></td>
                <td>
                    <button type="button" class="btn btn-primary saveItemBtn">Save</button>
                    <button type="button" class="btn btn-danger cancelItemBtn">Cancel</button>
                </td>
            `;
            
            // Save item data
            row.querySelector('.saveItemBtn').addEventListener('click', function () {
                // Save logic here
            });
            
            // Cancel item edit
            row.querySelector('.cancelItemBtn').addEventListener('click', function () {
                table.deleteRow(row.rowIndex - 1);
            });
        });
    </script>
}
